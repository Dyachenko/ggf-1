<div class="row">
  <div class="col s12">
    <div class="input-field col s12">
      {{md-input
      value=name
      label='Team name'
      }}
    </div>
    <div class="col s12">
      <label class="custom-file-upload">
        {{ggf-input-file logo=logo id="file-upload"}}
        <i class="fa fa-cloud-upload"></i> Upload
      </label>
    </div>
    {{#if logo}}
      {{#md-card-content}}
        {{ggf-image-preview logo=logo width="100" height="100"}}
      {{/md-card-content}}
    {{/if}}

    <div class="modal-create-btn input-field col s12">
      {{md-btn-submit
        icon='mdi-content-send'
        iconPosition='right'
        text='Create'
        action='create'
      }}
    </div>
  </div>
</div>
