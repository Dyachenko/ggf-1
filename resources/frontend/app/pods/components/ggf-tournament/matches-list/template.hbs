<h4>Matches</h4>

<div class="col m6 left-align">
  {{select-2
    content=rounds
    searchEnabled=false
    value=selectedRound
    class="col m4"
  }}
</div>
<div class="col m6 right-align">
  {{md-check name="Hide finished matches" checked=hideFinishedMatches}}
</div>


{{#md-table content=matchesList class='striped centered' as |match|}}
  {{md-table-col row=match valueBindingPath='id' header='#'}}
  {{md-table-col row=match valueBindingPath='round' header='Round'}}
  {{#md-table-col row=match key='homeTeam' header='Home Team'}}
    {{#link-to 'tournament.team' match.homeTeamId}}
      {{match.homeTeam}}
    {{/link-to}}
  {{/md-table-col}}
  {{md-table-col row=match valueBindingPath='score' header='Score'}}
  {{#md-table-col row=match key='awayTeam' header='Away Team'}}
    {{#link-to 'tournament.team' match.awayTeamId}}
      {{match.awayTeam}}
    {{/link-to}}
  {{/md-table-col}}
{{/md-table}}
