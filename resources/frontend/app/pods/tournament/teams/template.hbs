<div class="row">
  {{#with model.teams as |teams| }}
    {{#each teams as |team|}}
      <div class="col s12 m6 l4">
        {{#md-card
          title=team.name
        }}
          {{#md-card-content}}
            <img src="{{team.logoPath}}"/>
          {{/md-card-content}}
          {{#md-card-action}}
            {{#link-to 'tournament.team' team.id}}View team{{/link-to}}
          {{/md-card-action}}

        {{/md-card}}
        </div>
    {{/each}}
  {{/with}}
  {{#if session.isAuthenticated}}
    {{#if model.isDraft}}
      <div class="col s12 m6 l4">
        {{ggf-teams.add-team tournamentId=model.tournamentId submit="addTeam" query="queryOptions"}}
      </div>
    {{/if}}
  {{/if}}
</div>

{{outlet}}