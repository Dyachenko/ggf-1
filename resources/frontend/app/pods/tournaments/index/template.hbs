{{#if session.isAuthenticated }}
  <div class="row">
    <div class="col s12">
      {{#link-to 'tournaments.new'}}
        {{md-btn
        text='Create new tournament'
        icon='mdi-content-add-box'
        class='indigo'
        }}
      {{/link-to}}
    </div>
  </div>
{{/if}}


<div class="row">
  {{#each model as |tournament|}}
    <div class="col s12 m6 l4">

      {{ggf-tournament.card tournament=tournament}}

    </div>
  {{/each}}
</div>
