{{#link-to 'tournaments.new'}}
  {{md-btn
    text='Create new tournament'
    icon='mdi-content-add-box'
    class='indigo'
  }}
{{/link-to}}

{{#each model as |tournament|}}

  {{#md-card
    title=tournament.name
    titleClass="orange-text"
  }}

    {{#md-card-content}}
      {{tournament.description}}
    {{/md-card-content}}

    {{#md-card-action}}
      {{#link-to 'tournament.tablescore' tournament.id}}View tournament{{/link-to}}
    {{/md-card-action}}

  {{/md-card}}

{{/each}}