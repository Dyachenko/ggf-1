<h4>Teams</h4>

    <div class="ggf-teams mdl-cell--12-col">
        <div class="mdl-grid">
            {{#each model.teams as |team|}}
            <div class="mdl-cell mdl-cell--4-col">

                {{#ggf-card title=team.name logoPath=team.logoPath}}
                    <div class="mdl-card__actions mdl-card--border">
                        {{#link-to 'tournament.team' team class='mdl-button mdl-button--colored'}}
                            View Team
                        {{/link-to}}
                    </div>

                    <button class="mdl-button mdl-button--icon ggf-menu-button">
                        <i class="material-icons">more_vert</i>
                    </button>
                {{/ggf-card}}
            </div>

            {{/each}}
            {{#if session.isAuthenticated}}
                <div class="mdl-cell mdl-cell--4-col">
                    {{ggf-teams.add-team tournamentId=model.tournamentId submit="addTeam" query="queryOptions"}}
                </div>
            {{/if}}
        </div>
    </div>


{{outlet}}
